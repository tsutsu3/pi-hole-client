<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="2dp"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:layout_width="68dp"
        android:layout_height="68dp">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_icon_circular_background"
            android:clipToOutline="true"
            android:outlineProvider="background">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:importantForAccessibility="no"
                android:src="@drawable/widget_toggle_shield_disabled" />
        </FrameLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:importantForAccessibility="no"
            android:background="@drawable/widget_badge_circle_clip"
            android:clipToOutline="true"
            android:src="@mipmap/ic_launcher" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/app_name"
        android:textSize="14sp"
        android:textColor="@color/widget_toggle_text"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:maxLines="1"
        android:ellipsize="end" />
</LinearLayout>
