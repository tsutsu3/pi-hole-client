<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_config_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="32dp">

    <TextView
        android:id="@+id/widget_config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/widget_config_title"
        android:textColor="@color/widget_text_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/widget_server_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp" />

    <TextView
        android:id="@+id/widget_server_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_empty"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginTop="12dp" />

</LinearLayout>
