<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:clipToOutline="true"
    android:outlineProvider="background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_server_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="12"
                android:maxLines="1"
                android:text="@string/widget_unknown_server"
                android:textColor="@color/widget_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/widget_refresh_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/widget_action_button"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:contentDescription="@string/widget_refresh"
                android:src="@drawable/widget_icon_refresh"
                android:tint="@color/widget_text_secondary" />

            <ImageButton
                android:id="@+id/widget_toggle_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/widget_action_button"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:contentDescription="@string/widget_toggle"
                android:src="@drawable/widget_icon_shield_disabled" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_uptime_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@string/widget_uptime"
            android:src="@drawable/widget_icon_uptime"
            android:tint="@color/widget_text_secondary" />

        <TextView
            android:id="@+id/widget_uptime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="--"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/widget_temp_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/widget_cpu_temp"
            android:src="@drawable/widget_icon_temp"
            android:tint="@color/widget_text_secondary" />

        <TextView
            android:id="@+id/widget_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="--"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/widget_cpu_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/widget_cpu_usage"
            android:src="@drawable/widget_icon_cpu"
            android:tint="@color/widget_text_secondary" />

        <TextView
            android:id="@+id/widget_cpu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="--"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/widget_mem_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/widget_memory_usage"
            android:src="@drawable/widget_icon_memory"
            android:tint="@color/widget_text_secondary" />

        <TextView
            android:id="@+id/widget_mem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="--"
            android:textColor="@color/widget_text_secondary"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="--"
        android:textColor="@color/widget_text_secondary"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_card_blue"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/widget_queries_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:contentDescription="@string/widget_total_label"
                        android:src="@drawable/widget_icon_queries"
                        android:tint="@color/widget_text_on_card" />

                    <TextView
                        android:id="@+id/widget_queries_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/widget_total_label"
                        android:textColor="@color/widget_text_on_card"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/widget_queries_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_text_on_card"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/widget_card_red"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/widget_blocked_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:contentDescription="@string/widget_blocked_label"
                        android:src="@drawable/widget_icon_blocked"
                        android:tint="@color/widget_text_on_card" />

                    <TextView
                        android:id="@+id/widget_blocked_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/widget_blocked_label"
                        android:textColor="@color/widget_text_on_card"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/widget_blocked_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_text_on_card"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_card_orange"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/widget_percent_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:contentDescription="@string/widget_percent_label"
                        android:src="@drawable/widget_icon_percent"
                        android:tint="@color/widget_text_on_card" />

                    <TextView
                        android:id="@+id/widget_percent_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/widget_percent_label"
                        android:textColor="@color/widget_text_on_card"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/widget_percent_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_text_on_card"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/widget_card_green"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/widget_domains_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:contentDescription="@string/widget_domains_label"
                        android:src="@drawable/widget_icon_domains"
                        android:tint="@color/widget_text_on_card" />

                    <TextView
                        android:id="@+id/widget_domains_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/widget_domains_label"
                        android:textColor="@color/widget_text_on_card"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/widget_domains_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/widget_text_on_card"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
