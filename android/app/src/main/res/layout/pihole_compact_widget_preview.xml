<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_surface"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pi-hole"
            android:textSize="12sp"
            android:textColor="@color/widget_text_primary"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Total queries -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:importantForAccessibility="no"
                android:src="@drawable/widget_icon_queries"
                android:tint="@color/widget_card_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="74,123"
                android:textSize="12sp"
                android:textColor="@color/widget_card_blue"
                android:textStyle="bold"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Blocked queries -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:importantForAccessibility="no"
                android:src="@drawable/widget_icon_blocked"
                android:tint="@color/widget_card_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="35,478"
                android:textSize="12sp"
                android:textColor="@color/widget_card_red"
                android:textStyle="bold"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Percent blocked -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:importantForAccessibility="no"
                android:src="@drawable/widget_icon_percent"
                android:tint="@color/widget_card_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="47.8%"
                android:textSize="12sp"
                android:textColor="@color/widget_card_orange"
                android:textStyle="bold"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Domains on adlists -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:importantForAccessibility="no"
                android:src="@drawable/widget_icon_domains"
                android:tint="@color/widget_card_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="1,300,200"
                android:textSize="12sp"
                android:textColor="@color/widget_card_green"
                android:textStyle="bold"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:importantForAccessibility="no"
        android:src="@drawable/widget_icon_shield_on"
        android:background="@drawable/widget_action_button_on_circle"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:padding="8dp" />
</LinearLayout>
